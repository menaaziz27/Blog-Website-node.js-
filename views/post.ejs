<!DOCTYPE html>
<html lang="en">

<%- include('layouts/header.ejs') -%>


  <body>

    <%- include('layouts/nav.ejs') -%>


      <!-- Page Header -->
      <header class="masthead" style="background-image: url('<%= blogPost.image %>')">
        <div class="overlay"></div>
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
              <div class="post-heading">
                <h1>
                  <%= blogPost.title %>
                </h1>
                <h2 class="subheading">
                  <!-- <%= blogPost.body %> -->
                </h2>
                <span class="meta">Posted by
                  <a href="#">
                    <%= blogPost.username %>
                  </a>
                  <%= blogPost.datePosted.toDateString() %>
                </span>
              </div>
            </div>
          </div>
        </div>
      </header>

      <!-- Post Content -->
      <article>
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
              <%= blogPost.body %>
            </div>
          </div>
        </div>
      </article>

      <hr>

      <%- include('layouts/footer.ejs') -%>

        <%- include('layouts/scripts.ejs') -%>


  </body>

</html>